<div class="body">
    <div class="form">
          <form action="/movies/{{movies._id}}/edit" method="post">

    <input type="text" name="title" value="{{movies.title}}">

    <input type="text" name="genre" value="{{movies.genre}}">

    <input type="text" name="plot" value="{{movies.plot}}">
 <div class="label">
      <h3>Cast</h3>
      <select name="cast" id="cast" multiple>
 {{#each movies.cast}}
  <option value="{{this._id}}">{{this.name}}</option>
  {{/each}}
</select>
 </div>
 
<button type="submit">Submit</button>
</form> 
    </div>
 
</div>
